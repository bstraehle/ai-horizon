{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["js/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
