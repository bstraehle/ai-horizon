{
  "name": "ai-horizon",
  "version": "1.0.0",
  "private": true,
  "description": "AI HORIZON",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "esbuild js/game.js --bundle --minify --sourcemap --target=es2018 --outfile=dist/bundle.js",
    "postbuild": "powershell -NoProfile -Command \"New-Item -ItemType Directory -Force -Path dist > $null; Copy-Item -Force .\\favicon.png, .\\style.css, .\\manifest.webmanifest, .\\sw.js, .\\pwa-register.js .\\dist\\; (Get-Content .\\index.prod.html) -replace 'dist/bundle.js','bundle.js' | Set-Content .\\dist\\index.html\"",
    "watch": "esbuild js/game.js --bundle --minify --sourcemap --target=es2018 --outfile=dist/bundle.js --watch",
    "serve": "esbuild js/game.js --bundle --minify --sourcemap --target=es2018 --outfile=dist/bundle.js --serve=8000 --servedir=.",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "ci:verify": "npm run lint:ci && npm test --silent",
    "ci:local": "npm run lint:ci && npm run format:check && npm run typecheck && npm test",
    "prepare": "husky || echo 'husky skipped'"
  },
  "vitest": {
    "setupFiles": "./tests/setup.js"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.617.0",
    "@aws-sdk/lib-dynamodb": "^3.617.0",
    "@eslint/js": "^9.10.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.0.0",
    "globals": "^15.8.0",
    "husky": "^9.1.6",
    "jsdom": "^21.1.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs}": [
      "eslint --fix"
    ],
    "**/*.{js,mjs,cjs,ts,tsx,css,md,html,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.12.0 || ^20.19.0"
  },
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.890.0",
    "@aws-sdk/credential-providers": "^3.890.0",
    "@aws-sdk/signature-v4-multi-region": "^3.890.0"
  }
}
